<Window x:Class="Uge44ProjektOpgaveNewsletter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NNTP Login" Height="500" Width="800" MinWidth="600" MinHeight="450"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0">

    <Grid Margin="20">
        <!-- Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Saved Users / Labels -->
            <ColumnDefinition Width="3*"/>
            <!-- TextBoxes / Buttons -->
            <ColumnDefinition Width="2*"/>
            <!-- Response TextBox -->
        </Grid.ColumnDefinitions>

        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Server -->
            <RowDefinition Height="Auto"/>
            <!-- Port -->
            <RowDefinition Height="Auto"/>
            <!-- Username -->
            <RowDefinition Height="Auto"/>
            <!-- Password -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons row (Confirm, Save, ComboBox) -->
            <RowDefinition Height="Auto"/>
            <!-- Connection Button row -->
            <RowDefinition Height="*"/>
            <!-- Filler / scalable area -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Server -->
        <Label Grid.Row="0" Grid.Column="0" Content="Server Name:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox x:Name="serverNameTextbox" Grid.Row="0" Grid.Column="1" Text="news.sunsite.dk" MinWidth="150" Margin="0,5"/>

        <!-- Port -->
        <Label Grid.Row="1" Grid.Column="0" Content="Port:" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox x:Name="portTextbox" Grid.Row="1" Grid.Column="1" Text="119" MinWidth="150" Margin="0,5"/>

        <!-- Username -->
        <Label Grid.Row="2" Grid.Column="0" Content="Username:" VerticalAlignment="Center" Margin="0,10,10,0"/>
        <TextBox x:Name="userNameTextbox" Grid.Row="2" Grid.Column="1" MinWidth="150" Margin="0,10,0,0"/>

        <!-- Password -->
        <Label Grid.Row="3" Grid.Column="0" Content="Password:" VerticalAlignment="Center" Margin="0,10,10,0"/>
        <PasswordBox x:Name="passwordBox" Grid.Row="3" Grid.Column="1" MinWidth="150" Margin="0,10,0,0"/>

        <!-- Buttons Row -->
        <!-- Saved Users ComboBox -->
        <ComboBox x:Name="savedUserCB" Grid.Row="4" Grid.Column="0" Width="140" Height="30"
                  HorizontalAlignment="Left" Margin="0,20,10,0" SelectionChanged="ComboBox_SelectionChanged"/>

        <!-- Confirm Login Button -->
        <Button x:Name="confirmButton" Grid.Row="6" Grid.Column="1" Content="Confirm Login"
                Width="130" Height="30" HorizontalAlignment="Left" Margin="0,20,10,0"
                Click="ConfirmButton_Click"/>

        <!-- Save Login Button -->
        <Button x:Name="saveLoginButton" Grid.Row="6" Grid.Column="3" Content="Save Login"
                Width="100" Height="30" HorizontalAlignment="Left" Margin="10,20,0,0"
                Click="saveLoginButton_Click"/>

        <!-- Connection Button Row -->
        <Button x:Name="ConnectionButton" Grid.Row="7" Content="Connect"
                Width="130" HorizontalAlignment="Left" Margin="215,1,0,94"
                Click="ConnectionButton_Click" Grid.ColumnSpan="2"/>

        <!-- Response TextBox -->
        <TextBox x:Name="responseTextbox" Grid.Row="0" Grid.Column="3" Grid.RowSpan="6"
                 VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                 TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Margin="10,0,0,0"/>
    </Grid>
</Window>
