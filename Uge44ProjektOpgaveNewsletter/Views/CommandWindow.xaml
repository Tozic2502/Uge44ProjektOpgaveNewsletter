<Window x:Class="Uge44ProjektOpgaveNewsletter.Views.CommandWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uge44ProjektOpgaveNewsletter.Views"
        mc:Ignorable="d"
        Title="Command Window"
        Height="450" Width="1200"
        MinWidth="800" MinHeight="400">

    <Grid Margin="10">
        <!-- Columns: Left = saved groups, Center = log/info, Right = last used commands -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Rows: Header, Main content, Command input -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ======= HEADER (server + buttons + search) ======= -->
        <Grid Grid.ColumnSpan="3" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Label -->
                <ColumnDefinition Width="Auto"/>
                <!-- Save button -->
                <ColumnDefinition Width="*"/>
                <!-- Search box (flexible) -->
                <ColumnDefinition Width="Auto"/>
                <!-- Search button -->
            </Grid.ColumnDefinitions>

            <Label x:Name="serverNameLable" 
                   Content="ServerName" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>

            <Button x:Name="SaveGroupButton" 
                    Content="Save Group" 
                    Grid.Column="1" 
                    Margin="0,0,10,0"
                    Padding="10,2"
                    Click="SaveGroupButton_Click"/>

            <TextBox x:Name="SearchTextbox" 
                     Grid.Column="2"
                     TextWrapping="Wrap" 
                     Text=""
                     VerticalAlignment="Center"
                     Margin="0,0,10,0"/>

            <Button x:Name="SearchButton" 
                    Content="Search" 
                    Grid.Column="3"
                    Padding="10,2"
                    Click="SearchButton_Click"
                    VerticalAlignment="Center"/>
        </Grid>

        <!-- ======= LEFT: Saved Groups ======= -->
        <ListView x:Name="savedGroupsLV"
                  Grid.Row="1" Grid.Column="0"
                  Margin="0,0,5,0"
                  SelectionChanged="savedGroupsLV_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Saved Groups"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- ======= CENTER: Info Text ======= -->
        <TextBox x:Name="InfoTextBlock"
                 Grid.Row="1" Grid.Column="1"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 FontSize="14"
                 Padding="5"
                 Margin="5,0,5,0"
                 Text="Text Here from Server"/>

        <!-- ======= RIGHT: Last Used Commands ======= -->
        <ListView x:Name="lastUsedCommandLV"
                  Grid.Row="1" Grid.Column="2"
                  Margin="5,0,0,0"
                  SelectionChanged="lastUsedCommandLV_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Last Commands"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- ======= BOTTOM: Command Input ======= -->
        <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Command box expands -->
                <ColumnDefinition Width="Auto"/>
                <!-- Confirm button fixed -->
            </Grid.ColumnDefinitions>

            <TextBox x:Name="commandotTextbox"
                     Grid.Column="0"
                     TextWrapping="Wrap"
                     Text=""
                     VerticalAlignment="Center"
                     Margin="0,0,5,0"
                     Height="34"/>

            <Button x:Name="confirmCommandoButton"
                    Grid.Column="1"
                    Content="Confirm"
                    Width="120"
                    Click="confirmCommandoButton_Click"/>
        </Grid>
    </Grid>
</Window>
