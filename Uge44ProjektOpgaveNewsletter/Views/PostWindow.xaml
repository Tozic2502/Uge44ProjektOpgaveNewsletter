<Window x:Class="Uge44ProjektOpgaveNewsletter.Views.PostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Post" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Subject:" FontWeight="Bold"/>
            <TextBox x:Name="SubjectTextBox" Margin="0,5,0,15"/>

            <TextBlock Text="Message:" FontWeight="Bold"/>
            <TextBox x:Name="BodyTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="200"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Send" Width="80" Margin="0,0,10,0" Click="SendButton_Click"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
